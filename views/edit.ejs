<%- include ("./partials/header") %>

    <div class="container mt-4">
        <div class="row">
            <div class="col col-3"></div>
            <div class="col col-6">

                <form action="/<%= post._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="mb-3">
                      <label for="description" class="form-label">Description</label>
                      <input type="text" name="description" class="form-control" id="description" value="<%= post.description %>">
                    </div>


                    <div class="input-group mb-3">
                      <input type="file" name="image" class="form-control" id="image" multiple>
                      <label class="input-group-text" for="image">Add Images</label>
                    </div>
                    <div class="mb-3">
                      <% post.images.forEach(function(img, i){ %>
                        <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                          <input type="checkbox" id="image-<%= %>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="">Delete?</label>

                     <%}) %>
                    </div>
                    <button type="submit" class="btn btn-primary">Update Post</button>
                    <a class= "btn btn-secondary" href="/<%= post._id %>">Back to Post</a>
 
                  </form>
            </div>
            <div class="col col-3"></div>
        </div>
        
    </div>
    
<%- include ("./partials/footer") %>